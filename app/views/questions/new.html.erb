<h3><%= @current_user.name %></h3>

  <div class="row">
    <aside class="col-sm-10">
      <%= form_for @question do |f| %>
      <%= render "layouts/error_messages", model: f.object %>
      
        <%= f.label :"質問記入欄" %>
        <%= f.text_area :content, size: "60x10", class: "form-control" %>
        
        <%= f.fields_for :choices do |choice_fields| %>
          <%= choice_fields.label :"選択肢" %>
          <%= choice_fields.text_field :content, size: 60, class: "form-control" %>
  
        <% end %>
        
        <%= f.submit "投稿", class: "btn btn-primary" %>
      <% end %>
    </aside>
  </div>


<p>アンケート作成中・・・</p>
